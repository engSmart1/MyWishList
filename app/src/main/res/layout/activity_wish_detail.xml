<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wish_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hytham.mywishlist.WishDetailActivity">
    <TextView
        android:id="@+id/detailsTitle"
        android:text="My Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:textSize="15dp"
        android:textColor="#666262"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detailsTextView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="My Wishes....."
        android:textStyle="italic"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#8b8686"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detailsDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date here ...."
        android:layout_alignParentRight="true"
        android:layout_below="@+id/detailsTextView"
        android:textSize="11dp"
        android:layout_marginTop="9dp"/>
    <Button
        android:id="@+id/deleteButton"
        android:layout_below="@+id/detailsDateText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
